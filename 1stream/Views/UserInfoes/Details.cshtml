@model OneStream.Models.UserInfo

@{
    ViewBag.Title = "User Info";
}
<fieldset>
    <legend>@ViewBag.Title</legend>
    <div class="display-label">FirstName:</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">LastName:</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">Email:</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">Balance:</div>
    <div class="display-field">@String.Format("{0:F}", Model.Balance)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.UserId }, new {@class = "btn"})
</p>


