@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link href="@Styles.Url("~/content/css")" rel="stylesheet"/>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/js")
    @RenderSection("head", required: false)
    @Html.Partial("_html5shiv")
    @* favicons and touch icons go here *@
</head>
<body>
    <a href="#" class="scrolltop">
        <span>up</span>
    </a>
    <!-- begins navbar -->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" data-section="body" href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/themes/measure/img/logo.png")" alt="logo" />
                </a>
                <div class="nav-collapse collapse">
                    <ul class="nav pull-right">
                            @Html.Navigation(User.Identity.IsAuthenticated)
                        <li class="dropdown">
                             @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- ends navbar -->
    <div class="container">
        @Html.Partial("_alerts")
        @Html.Partial("_validationSummary")
        @RenderBody()       
    </div>
    
    <!-- starts footer -->
    <footer>
        <div id="footer">
            <div class="container">
                <div class="row copyright">
                    <div class="span5">
                        <h3>Social</h3>
                        <a href="#" class="social fb">
                            <i class="i_facebook"></i>
                        </a>
                        <a href="#" class="social tw">
                            <i class="i_twitter"></i>
                        </a>
                        <a href="#" class="social yt">
                            <i class="i_youtube"></i>
                        </a>
                    </div>
                    <div class="span2 offset5 copy">
                        <p>2013 - 1Stream</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    
    @RenderSection("Scripts", required: false)
</body>
</html>